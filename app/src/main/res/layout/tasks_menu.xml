<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".TasksMenue">

    <Button
        android:onClick="goTaskOne"
        android:textColor="@color/white_solid"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/task_one"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Task-1"
        android:textSize="20sp" />

    <Button
        android:onClick="goTaskTwo"
        android:textColor="@color/black_solid"
        android:background="@color/gray_iron"
        android:id="@+id/task_two"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Task-2"
        android:textSize="20sp" />

    <Button
        android:onClick="goTaskThree"
        android:textColor="@color/white_solid"
        android:background="@color/bondi_blue"
        android:id="@+id/task_three"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Task-3"
        android:textSize="20sp" />

    <Button
        android:onClick="goTaskFour"
        android:textColor="@color/white_solid"
        android:background="@color/bahama_blue_general"
        android:id="@+id/task_four"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Task-4"
        android:textSize="20sp" />
</LinearLayout>